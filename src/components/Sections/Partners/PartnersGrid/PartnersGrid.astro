---
import Container from "@components/Container.astro";
import CustomImage from "@components/CustomImage.astro";

import "./PartnersGrid.css"; // Import the new CSS file
const { data, cards } = Astro.props;
interface Card {
  expand: {
    image: {
      image: string;
      alt: string;
      fit: string;
      position: string;
    };
  };
}
---

<div class="partners-grid">
  <Container>
    <div class="partners-grid__wrapper">
      <div class="content">
        <h2>{data.title}</h2>
      </div>
      <div class="partners-grid__image-grid">
        {
          cards.map((card: Card) => (
            <div class="partners-grid__image_wrapper">
              {card.expand.image && (
                <CustomImage
                  image={card.expand.image}
                  classlist="partners-grid__image_component"
                  size="small"
                  eager={false}
                />
              )}
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</div>
