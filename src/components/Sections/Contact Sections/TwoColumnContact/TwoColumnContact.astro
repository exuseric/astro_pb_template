---
import InfoCard from "@components/Cards/Info/InfoCard.astro";
import Container from "@components/Container.astro";
import "./contact.css";
import TopRightAnimatedSvg from "@components/TopRightAnimatedSvg.astro";

const { info, location, title } = Astro.props;
---

<div class="two_column_contact container" id="contact" data-highlight="true">
    <!-- <TopRightAnimatedSvg /> -->
    <Container as="article">
        <header class="content_section__header">
            <h2>{title}</h2>
        </header>
        <div class="two_column_contact__content">
            <div class="two_column_contact__body">
                <InfoCard cards={info} direction="column" />
            </div>
            
            <div class="two_column_contact__location">
                <adrress>
                    <slot set:html={location[0].content} />
                </adrress>
                {
                    location.map((location: any) => (
                        <div class="location">
                            {/* <slot set:html={location.content} /> */}
                            <slot set:html={location.title} />
                        </div>
                    ))
                }
            </div>
        </div>
    </Container>
</div>
