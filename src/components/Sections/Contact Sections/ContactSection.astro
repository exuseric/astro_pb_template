---
import DefaultContact from "./DefaultContact/DefaultContact.astro"
import TwoColumnContact from "./TwoColumnContact/TwoColumnContact.astro"
import MultiLocation from "./MultiLocation/MultiLocation.astro"

const props = Astro.props
---

{props.direction === "horizontal" && <TwoColumnContact {...props} />}
{props.direction === "vertical" && <DefaultContact {...props} />}
{props.style === "multi location" && <MultiLocation {...props} />}