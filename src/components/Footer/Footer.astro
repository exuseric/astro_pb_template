---
import FloatingFooter from "./FloatingFooter/FloatingFooter.astro";
import TinyFooter from "./TinyFooter/TinyFooter.astro";

const {company, title, style, country} = Astro.props

const footerProps = {
    title,
    company_name: company.companyName,
    parent_site_url: company.url,
    country
}
---
{style === 'floating' && <FloatingFooter {...footerProps} />}
{style === 'default' && <TinyFooter {...footerProps} />}