---
import { translateFooterItem } from '@utils/translations';

interface Props {
    title: string;
    company_name: string;
    parent_site_url: string;
    country: string;
}

import Container from "@components/Container.astro";
import "./footer.css";
import { Image } from "astro:assets";
const { title, company_name, parent_site_url, country } = Astro.props;

const copyright = translateFooterItem('copyright', country);
const designedByText = translateFooterItem('designed_by', country);
---

<footer class="floating_footer">
    <Container>
        <div class="breakout floating_footer__content">
            <p>
                &copy; {new Date().getFullYear()} {title.split("|")[0].trim()}. {copyright}
            </p>
            <a
                href={parent_site_url}
                target="_blank"
                rel="noopener noreferrer"
                class="floating_footer__logo"
            >
                <Image
                    src="/yellow-pages-logo.webp"
                    alt="yellow pages logo"
                    width={512}
                    height={512}
                    class="floating_footer__logo-image"
                />
                <span class="floating_footer__logo-text"
                    >{designedByText} {company_name}</span
                >
            </a>
        </div>
    </Container>
</footer>
