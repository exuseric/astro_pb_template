---
import BlackModern from "./BlackModern/BlackModern.astro";
import Gradient from "./Gradient/Gradient.astro";
import HorizontalWithImage from "./HorizontalWithImage/HorizontalWithImage.astro";
import Overflow from "./Overflow/Overflow.astro";
import TwoColumnHero from "./TwoColumnHero/TwoColumnHero.astro";
import VerticalWithImage from "./VerticalWithImage/VerticalWithImage.astro";
import TwoSquares from "./TwoSquares/TwoSquares.astro";
import BlockyHero from "./BlockyHero/BlockyHero.astro";

const { title, excerpt, image, type } = Astro.props;
---
{type === "blocky" && <BlockyHero title={title} excerpt={excerpt} image={image} />}
{type === "gradient" && (<Gradient title={title} excerpt={excerpt} image={image} />)}
{type === "black modern" && <BlackModern title={title} excerpt={excerpt} image={image} />}
{type === "horizontal with image" && <HorizontalWithImage title={title} excerpt={excerpt} image={image} />}
{type === "vertical with image" && <VerticalWithImage title={title} excerpt={excerpt} image={image} />}
{type === "two column" && <TwoColumnHero title={title} excerpt={excerpt} image={image} />}
{type === "two square" && <TwoSquares title={title} excerpt={excerpt} image={image} />}
{(!type || type === "default") && <Overflow title={title} excerpt={excerpt} image={image} />}
