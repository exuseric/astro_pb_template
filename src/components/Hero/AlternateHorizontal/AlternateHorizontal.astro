---
import Container from "@components/Container.astro";
import "./hero.css";
import type { HeroProps } from "@utils/types";
import CustomImage from "@components/CustomImage.astro";
interface Props extends HeroProps {}
const { title, excerpt, image } = Astro.props;
---

<header class='horizontal_hero content_section'>
    <Container>
        <div class="horizontal_hero__wrapper">
            <article class="horizontal_hero__content">
                <h1>{title}</h1>
                <p>{excerpt}</p>
            </article>

            <div class="horizontal_hero__image_wrapper">
                <CustomImage
                    image={image}
                    size="large"
                    classlist="horizontal_hero__image"
                    eager={true}
                />
            </div>
        </div>
    </Container>
</header>
