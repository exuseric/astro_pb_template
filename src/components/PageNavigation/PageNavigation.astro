---
interface Props {
    links: string[];
    logo: {
        [key: string]: string;
    };
    title: string;
    style: string;
    hero_style: string;
    country: string;
    social_links: {
        [key: string]: string
    }
}

// import BasicFLoatingNav from "@components/PageNavigation/Navigation/FixedNav/FixedNav.astro";
// import FloatingPill from "@components/PageNavigation/FloatingPill/FloatingPill.astro";
import StickyNav from "@components/PageNavigation/StickyNav/StickyNav.astro";
import BlockyNav from "./BlockyNav/BlockyNav.astro";
import SimpleNav from "./SimpleNav/SimpleNav.astro";
// import CenterNav from "./CenterNav/CenterNav.astro";
import FloatingPill from "./FloatingPill/FloatingPill.astro";
const props = Astro.props;
const hero_style = props.hero_style

console.log({hero_style});

const blackText =
    props.hero_style === "two column" || props.hero_style === "two square" || props.hero_style === "blocky";

const fixedMenu = ["horizontal with image", "black modern", "gradient", "default", "default horizontal", "big name"].includes(props.hero_style) ? true : false;
const showSimpleNav = ["alternate vertical", "default vertical", "two column"].includes(hero_style)
const showPillNav = ["default", "big name"].includes(hero_style)

const navProps = {
    data: props,
    fixedMenu: fixedMenu,
    blackText: blackText,
    country: props.country,
}
---
<!-- <StickyNav {...navProps}/> -->

{showSimpleNav && <SimpleNav {...navProps}/>}

{showPillNav && <FloatingPill {...navProps}/>}