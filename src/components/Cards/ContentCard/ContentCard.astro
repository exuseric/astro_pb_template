---
interface Card {
    title: string;
    content: any;
    expand: {
        image: {
            file: string;
            title: string;
            position: string;
            fit: string;
        };
    };
}
import "./card.css";
import CustomImage from "@components/CustomImage.astro";
const { cards } = Astro.props;
---

<div class="content_card__grid">
    {
        cards.map((card: Card) => (
            <div class="content_card__content_wrapper">
                <div class="content_card__content">
                    <h3 class="content_card__content_title">{card.title}</h3>
                    <slot set:html={card.content} />
                </div>
                <div class="content_card__image_wrapper">
                    <CustomImage
                        image={card.expand.image}
                        eager={true}
                        size="large"
                        classlist="content_card__image"
                    />
                </div>
            </div>
        ))
    }
</div>
