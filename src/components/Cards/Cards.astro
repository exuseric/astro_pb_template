---
interface Props {
    card_type: string;
    cards: [];
    data: {
        [key: string]: any
    }
}
import Alternating from "./Alternating/Alternating.astro";
import Basic from "./Basic/Basic.astro";
import BlockyCards from "./Blocky/BlockyCards.astro";
import InfoCard from "./Info/InfoCard.astro";
// import StatsGrid from "./StatsGrid/StatsGrid.astro";

const { card_type, cards } = Astro.props;
---

{card_type === "blocky" && <BlockyCards cards={cards} />}
{card_type === "basic" && <Basic cards={cards} />}
{card_type === "info" && <InfoCard cards={cards} />}
{card_type === "alternating" && <Alternating cards={cards} />}