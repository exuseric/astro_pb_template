---
interface Card {
    [key: string]: {
        [key: string]: any;
    };
}
import { Image } from "astro:assets";
import "./fancy.css";
import { getImageUrl } from "@utils/pocketbase";
const { cards } = Astro.props;
---

<div class="fancy-card__grid">
    {
        cards.map((card: Card) => (
            <article>
                <Image
                    src={getImageUrl({
                        collection: card.expand.image,
                        filename: card.expand.image.image,
                    })}
                    alt={card.expand.image.alt}
                    inferSize
                    class="image-component__image"
                />
                <div>
                    <h3>{card.title}</h3>
                    <slot set:html={card.body} />
                </div>
            </article>
        ))
    }
</div>
